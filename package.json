{
  "name": "webpack-validator",
  "description": "Validate your webpack config with joi",
  "scripts": {
    "bootstrap": "npm i && lerna bootstrap && npm run build && npm run validate",
    "commit": "git-cz",
    "prebuild": "rimraf packages/*/lib",
    "validate": "npm-run-all --parallel lint cover build test --sequential check-coverage",
    "build": "gulp build",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "lint": "eslint .",
    "cover": "nyc --reporter=lcov --reporter=text --reporter=html mocha packages/*/src/**.test.js",
    "report-coverage": "cat ./coverage/lcov.info | node_modules/.bin/codecov",
    "test": "mocha packages/*/src/**.test.js",
    "watch:test": "npm run test -- -w",
    "release": "npm run build && npm run validate && lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/js-dxtools/webpack-validator.git"
  },
  "contributors": [
    "Jonathan Werner <jwe@posteo.de> (http://jonathanwerner.net)",
    "Juho Vepsäläinen (http://survivejs.com/)",
    "Kent C. Dodds <kent@doddsfamily.us> (http://kentcdodds.com/)",
    "Martin Schmid",
    "Sarbbottam Bandyopadhyay"
  ],
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "babel-cli": "6.7.7",
    "babel-core": "6.7.7",
    "babel-plugin-add-module-exports": "^0.1.4",
    "babel-plugin-espower": "^2.1.2",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-stage-2": "6.5.0",
    "babel-register": "6.7.2",
    "codecov": "1.0.1",
    "commitizen": "^2.7.6",
    "compression-webpack-plugin": "*",
    "copy-webpack-plugin": "*",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "2.8.0",
    "eslint-config-jonathanewerner": "1.0.1",
    "extract-text-webpack-plugin": "*",
    "ghooks": "1.2.1",
    "glob": "7.0.3",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.2",
    "gulp-newer": "^1.0.0",
    "gulp-plumber": "^1.0.1",
    "gulp-util": "^3.0.7",
    "gulp-watch": "^4.3.5",
    "html-webpack-plugin": "*",
    "lodash": "4.11.1",
    "mocha": "2.4.5",
    "npm-run-all": "1.8.0",
    "nyc": "6.4.0",
    "path-here": "1.1.0",
    "path-parse": "1.0.5",
    "power-assert": "1.3.1",
    "rimraf": "2.5.2",
    "semantic-release": "^4.3.5",
    "sinon": "1.17.3",
    "validate-commit-msg": "2.6.1",
    "webpack": "*",
    "webpack-md5-hash": "*",
    "webpack-notifier": "1.3.0",
    "with-package": "0.2.0"
  },
  "keywords": [
    "webpack",
    "config",
    "schema",
    "validation",
    "joi",
    "dx"
  ],
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "packages/*/lib/**/*.js",
      "test/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "jonathanewerner"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "npm run validate -s"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
